<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".downloadActivity"
    android:background="#D32A26"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="959dp"
        android:layout_height="265dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="902dp"
            android:layout_height="241dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:shadowDx="9"
            android:shadowDy="9"
            android:shadowRadius="19"
            android:text="youtube downloader"
            android:textColor="#FFFFFF"
            android:textSize="120sp"
            android:textStyle="bold"
            app:fontFamily="@font/freedom"
            app:guidelineUseRtl="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="949dp"
        android:layout_height="1056dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <EditText
            android:id="@+id/urlInput"
            android:layout_width="685dp"
            android:layout_height="87dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Enter your video links..."
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/download"
            android:layout_width="253dp"
            android:layout_height="52dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="download"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/urlInput" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="279dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"

            android:layout_marginTop="332dp"
            android:hint="select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/urlInput"
            tools:ignore="MissingConstraints">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>
        <!--        <Spinner-->
        <!--            android:id="@+id/type"-->
        <!--            android:layout_width="179dp"-->
        <!--            android:layout_height="34dp"-->
        <!--            android:layout_marginTop="24dp"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/urlInput"-->
        <!--            android:theme="@color/white"-->
        <!--            tools:layout_editor_absoluteX="191dp"-->
        <!--            tools:ignore="MissingConstraints" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="972dp"
        android:layout_height="367dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="581dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginStart="504dp"
            android:layout_marginTop="156dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="9"
            android:shadowDy="9"
            android:shadowRadius="30"
            android:text="hamza gar"
            android:textColor="#FFFFFF"
            android:textSize="150sp"
            android:textStyle="bold"
            app:fontFamily="@font/songstarfree"
            app:guidelineUseRtl="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>